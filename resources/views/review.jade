doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1.0')
    link(rel='stylesheet', type='text/css', href='/resources/styles/css/styles.css')
    link(href='http://fonts.googleapis.com/css?family=Julius+Sans+One', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Raleway', rel='stylesheet', type='text/css')
    link(rel='stylesheet' href='/resources/styles/css/pure-min.css')
    title Some great name
  body
    #main.pure-g
      header.pure-u-1
        div
          a(href='/')
            h1 Music Review Blog
            h2 music|coding|music|design|music
        div.social
          a.pure-u-1-4.socialitem(href='http://facebook.com/fabian.potschies', target='_blank')
            div
              img(src='/resources/images/icons/facebook.svg')
          a.pure-u-1-4.socialitem
            div
              img(src='/resources/images/icons/twitter.svg')
          a.pure-u-1-4.socialitem
            div
              img(src='/resources/images/icons/googleplus.svg')
          a.pure-u-1-4.socialitem(href='http://last.fm/user/wearethewinds', target='_blank')
            div
              img(src='/resources/images/icons/lastfm.svg')
      article#review.pure-u-2-3
        header.pure-u-23-24
          h1.pure-u-1-2
            | #{review.record.artist}
            br
            | #{review.record.title}
          time.pure-u-1-2 #{review.published}
          h2.pure-u-1-2 #{review.heading}
          #cover.pure-u-1-3
            img(src='#{review.record.coverlores}')
        each paragraph, i in review.reviewtext
          p
            | #{paragraph.paragraph}
        section#commentary.pure-u-23-24
          .fontwrapper
            .title.pure-u-1
              h1  #{review.comments.length} Comments
          each comment, i in review.comments
            article.comment
              header
                time #{comment.date}
                h2 #{comment.author}
              p
                | #{comment.text}
      section#rightside.pure-u-1-3
        section#new
          .fontwrapper
            .title.pure-u-1
              h1 Latest reviews
          each latestreview, i in latestreviews
            a.pure-u-1-2.album(href='/review/#{latestreview.dbrefer}')
              img(src='#{latestreview.record.coverlores}')
              div
                span #{latestreview.record.artist} "#{latestreview.record.title}"
        section#recommendations
          .fontwrapper
            .title.pure-u-1
              h1 We recommend
          a.pure-u-1-2.album.turquoise(href='/review')
            img(src='/resources/images/covers/5.jpg')
            div
              span virus "the agent that shapes the desert"
          a.pure-u-1-2.album.lightorange(href='/review')
            img(src='/resources/images/covers/4.jpg')
            div
              span songs:ohia "magnolia electric co."
          a.pure-u-1-2.album.darkorange(href='/review')
            img(src='/resources/images/covers/6.jpg')
            div
              span toe "for long tomorrow"
          a.pure-u-1-2.album.heavenblue(href='/review')
            img(src='/resources/images/covers/7.jpg')
            div
              span elysian blaze "elysian blaze"